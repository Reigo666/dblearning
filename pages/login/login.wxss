/* pages/login/login.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;/*父容器内边框 0为上下 30为左右 */
}

.logo{
    width: 144rpx;
    height: 144rpx;
    margin: 30rpx 0; 
}

.btn-login{
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
    border-radius: 10rpx;
}

.wechat{
    background-color: #42BD55;
    color: #fff;
    margin-bottom: 30rpx;
    
}

.douban{
    background-color: #fff;
    color: #42BD55;
    border: 2rpx solid #42BD55;
}

.agreement{
    color: #9d9d9d;
    font-size: 20rpx;/* 调节字体大小 */
    display: flex;
    position: absolute;/* absolute绝对距离 对于最下面的距离 relative 相对距离 */
    bottom: 50rpx;
}

.agreement .open{
    color: #4BB65C;
}