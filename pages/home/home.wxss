/* pages/home/home.wxss */

.header{
    background-color: #42BD55;
    /* padding: 15rpx; */
    height: 80rpx;
    display: flex;
    align-items: center;
    padding: 0 10rpx;
}

.search-wrapper{
    background-color: #fff;
    border-radius: 15rpx;
    height: 50rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}



.search-wrapper image{
    height: 32rpx;
    width: 32rpx;
    margin-right: 10rpx;
}

.row{
    margin-bottom: 30rpx;
    height: 440rpx;
}


.title-wrapper{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
}

.title-wrapper .title{
    color:#494949;
    font-weight: bold;
    font-size: 32rpx;
}

.title-wrapper .more{
    color: #0DB019;
    display: flex;
    align-items: center;

}

.title-wrapper .arrow{
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #0DB019;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
    margin-left: 6rpx;
}

.items{
    /* display: flex; */
    /* overflow-x: auto; *//* css oxa东西多可以滚动 东西少不能滚动 */
    white-space: nowrap;/* 不换行 */
}

.item{
    /* display: inline-flex;
    flex-direction: column; */
    margin-left: 30rpx;
    /* margin: 0 15rpx;左右都15 */
}

.item:last-of-type{
    margin-right: 30rpx;
} 




