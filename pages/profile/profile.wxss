/* pages/profile/profile.wxss */

page{
    height: 100%;
}
.container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}


.login-wrapper{/* 外框 */
    /* background-color: #f00; */
    height: 400rpx;
    display: flex;
    position: relative;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    /* z-index: -1; */
}

.login-wrapper image{
    position: absolute;
    left: 0;/* 距离左面为0 */
    top: 0;
    width: 100%;
    height: 100%;
    
    /* z-index: -1; */
}

.login-wrapper .login{/* 登录框 */
    color: #1E4826;
    background-color: #ffffff;
    border-radius: 60rpx;
    font-size: 46rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 350rpx;
    text-align: center;
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, 1);/* 向右 向下(负值左上)  模糊半径 延伸距离 */
    z-index: 1;
}

.items-wrapper{
    margin-top: 30rpx;/* margin指的是外边距，padding指的是内边距 */
}

.title-wrapper{
    padding-left: 30rpx;
    padding-right: 40rpx;
    display: flex;
    align-items: center;/* 使同一行文字 居中对齐 */
    justify-content: space-between;   
}

.title-wrapper .title{
    font-weight: bold;
    font-size: 36rpx;
}

.title-wrapper .view{
    color: #838383;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}
/* 所有的arrow */
.items-wrapper .arrow{
    width: 20rpx;
    height: 20rpx;
    /* background-color: #f00; */
    border-right: 4rpx solid #7f7f7f;
    border-bottom: 4rpx solid #7f7f7f;
    transform: rotate(-45deg);
    margin-left: 15rpx;
    /* margin-bottom: 200rpx; */
}

.item{
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 20rpx;
    /* padding动框内物体 margin动框 在边缘物体使用padding 因为框不能动。在框内物体使用margin，因为框也要动*/
}

.item .icon{
    width: 108rpx;
    height: 108rpx;
    margin-right: 30rpx;
}

.info-wrapper{
    flex-grow: 1;/* flex= flex-gorw flex-shrink flex-basis*/
    padding: 20rpx;
}


.info-wrapper .info{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info .left .top{
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.info .left .bottom{
    display: flex;
    color: #818181;
    align-items: flex-end;
}

.info .count{
    font-size: 60rpx;
    font-weight: bold;
}

.info .bottom .text{
    padding-bottom: 10rpx;
}

.info .right{
    display: flex;
    align-items: center;
    font-size: 10rpx;
    flex-grow: 1;
    padding-left: 10rpx;
    justify-content: space-between;
    /* background-color: #f00; */
}

.info .right .text{
    color: #c1c1c1;
    font-size: 30rpx;
    margin-right: 10rpx;
}

.info .right .begin{
    color: #4a4a4a;
    font-size: 30rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    padding: 10rpx 15rpx;
    /* padding-left: 10rpx;
    padding-right: 10rpx;
    padding-bottom: 10rpx;
    padding-top: 10rpx; */
    /* 调整内容和边框的距离，相当于拉大边框 */
}



.item .divider{
    width: 100%;
    height: 2rpx;
    background-color:rgba(0, 0, 0, 0.1);/* alpha 为透明度 */
}

.version{
    font-size: 24rpx;
    color: #c9c9c9;
    width: 100%;
    text-align: center;
    margin: 30rpx 0;/* 上下 左右 */
    /* margin-bottom: 30rpx; */
    /* position: absolute; */
    /* bottom: 30rpx; */
}